<Page x:Class="WpfApp1.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" >





            <UniformGrid>
                <Label Content="Ведите логин:" Margin="5"></Label>
                <TextBox x:Name="login" Width="100" Height="20" Margin="5"></TextBox>
            </UniformGrid>

            <UniformGrid>
                <Label Content="Ведите пароль:" Margin="5"></Label>
                <TextBox x:Name="Passwords" Width="100" Height="20" Margin="5"></TextBox>
            </UniformGrid>
            
            <UniformGrid>
                <Label Content="Ведите пароль повторно:" Margin="5"></Label>
                <TextBox x:Name="PasswordTwo" Width="100" Height="20" Margin="5"></TextBox>
            </UniformGrid>
            
            <UniformGrid>
                <Button Content="Зарегистрироваться" x:Name="enter" Click="RegClick" Margin="5"/>
            </UniformGrid>
            
        </StackPanel>
    </Grid>
</Page>
